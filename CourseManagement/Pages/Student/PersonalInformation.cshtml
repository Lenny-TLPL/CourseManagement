@page
@model CourseManagement.Pages.Student.PersonalInformationModel

@{
    ViewData["Title"] = "PersonalInformation";
    Layout = "_Layout_Student";
}

<h1>PersonalInformation</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Phone)
        </dt>
        <dd class="col-sm-10">+84
            @Html.DisplayFor(model => model.Student.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Major.Name)
            -
            @Html.DisplayFor(model => model.Student.Major.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Term)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Term)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.StartDate)
        </dt>
        <dd class="col-sm-10">
            @{
                string date ;
                if(Model.Student.StartDate != null)
                {
                    date = Model.Student.StartDate.Value.ToShortDateString();
                } else {
                    date = "N/A";
                }
            }
            @Html.DisplayFor(model => date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.GraduationDate)
        </dt>
        <dd class="col-sm-10">
            @{ 
                string graduationDate ;
                if(Model.Student.GraduationDate != null)
                {
                    graduationDate = Model.Student.GraduationDate.Value.ToShortDateString();
                } else {
                    graduationDate = "N/A";
                }
            }
            @Html.DisplayFor(model => graduationDate)
        </dd>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Student.UserBasic)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.Student.UserBasic.Email)
        </dd>
    </dl>
</div>
